{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/server/*": ["src/server/*"],
      "@/shared/*": ["src/shared/*"]
    }
  },
  "include": ["src/server/**/*", "src/shared/**/*", "src/lib/config.ts"],
  "exclude": ["node_modules"]
}

